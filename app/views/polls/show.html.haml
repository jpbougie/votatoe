- total = @poll.votes.count
%section#question
  #profile-picture
    %img{:src => twitter_profile_image }
  #tweet
    %h1!= auto_link(@poll.text)
  #type
    Votatoe guessed this is a
    question
    - if !@poll.choices.blank?
      with the following choices: 
      - for choice in @poll.choices
        %strong= choice
  #count= "#{total} votes"

%section#answers
  - if !@poll.votes.blank?
    - for choice in @poll.choices
      - votes = @poll.votes.where(:choice => choice)
      - count = votes.count || 0
      - percentage = ((count.to_f / total) * 100).ceil
      
      %section.choice
        %hgroup
          %h1= choice
          %h2= "#{percentage}%"
          %h2= "#{count} votes"
        %ul
          - for vote in votes
            - if !vote.blank?
              %li.tweet
                %img{:src => profile_picture(vote.author), :width => "20", :height => "20"}
                %span!= auto_link vote.text